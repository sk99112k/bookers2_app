<h1>User info</h1>

  <p><%= image_tag @book.user.get_image %></p>
  <div>
    <p>name</p>
    <p><%= @book.user.name %></p>
  </div>
  <div>
    <p>introduction</p>
    <p><%= @book.user.introduction %></p>
  </div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_image %></td>
      <td><%= book.user.name %></td>
      <td><%= book.body %></td>
  <% end %>
    </tr>
  </tbody>
</table>