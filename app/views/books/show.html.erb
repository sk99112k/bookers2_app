<h1>User info</h1>

  <p><%= image_tag @book.user.get_image %></p>
  <div>
    <p>name</p>
    <p><%= @book.user.name %></p>
  </div>
  <div>
    <p>introduction</p>
    <p><%= @book.user.introduction %></p>
  </div>

<h1>New book</h1>
<%= form_with model: @book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_image %></td>
      <td><%= link_to @book.user.name , user_path %></td>
      <td><%= link_to @book.title , book_path(@book.id) %></td>
      <td><%= @book.body %></td>
    <% if @book.user == current_user %>
      <td><%= link_to 'Edit', edit_user_path %></td>
      <td><%= link_to 'Destroy', book_path(current_user), method: :delete %></td>
    <% end %>
    </tr>
  </tbody>
</table>