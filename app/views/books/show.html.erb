<div>
  <%= flash[:notice] %>
</div>
<div>
  <%= flash[:success] %>
</div>
<%= render 'users/error', book: @book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'info', user: @book.user %>

      <h1 class="mt-3">New book</h1>
      <%= render 'users/form', book: @book_new %>
    </div>
      <div class="col-md-8 offset-md-1">
         <h1>Book detail</h1>
        <table class="table">
          <tr>
            <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
            <% end %>
            </td>
            <td><%= link_to @book.title , book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-danger" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
            <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete do %>
              ❤ <%= @book.favorites.count %>
            <% end %>
             </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
              ♡ <%= @book.favorites.count %>
              <% end %>
            </td>
            <% end %>
            <td>
              コメント件数:<%= @book.book_comments.count %>
            </td>
          </tr>
        </table>
        <% @book.book_comments.each do |book_comment| %>
        <table class="table">
          <td>
            <%= image_tag book_comment.user.get_profile_image(50,50) %><br>
            <%= book_comment.user.name %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete %>
            <% end %>
          </td>
        <% end %>
        </table>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows:"3" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
