<div>
  <%= flash[:notice] %>
</div>
<div>
  <%= flash[:success] %>
</div>
<%= render 'users/error', book: @book %>

<div class="container px-5 px-sm-0 box">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'info', user: @book.user %>

      <h1 class="mt-3">New book</h1>
      <%= render 'users/form', book: @book_new %>
    </div>
      <div class="col-md-8 offset-md-1">
         <h1>Book detail</h1>
        <table class="table">
          <tr id="book_<%= @book.id %>">
            <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
            <% end %>
            </td>
            <td><%= link_to @book.title , book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-danger" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
            <td class="favorite-btn">
              <%= render 'favorites/favorite-btn', book: @book %>
            </td>
            <td class="comments-count">
              コメント件数:<%= @book.book_comments.count %>
            </td>
          </tr>
        </table>
        <table class="book_comments">
          <%= render 'book_comments/comment-btn', book: @book %>
        </table>
        <%= form_with model: [@book, @book_comment], local: false do |f| %>
          <%= f.text_area :comment, rows:"3" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
