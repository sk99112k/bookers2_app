<table class='table'>
  <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= current_user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
  
  
  <tr>
    <th>follows</th>
    <th><%= current_user.following_id %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= current_user.follower_id %></th>
  </tr>
  
  
</table>

<div class='row'>
  <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
