<div class="container px-5">
  <div class="row">
    <div class="col">
      <h1>Follow Users</h1>


      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="6"></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td>
            <%= "フォロー数： #{user.active_relationships.count}" %>
          </td>
          <td>
            <%= "フォロワー数： #{user.passive_relationships.count}" %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
