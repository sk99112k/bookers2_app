<div class="container">
  <div class="row">
    <div class="col">
      <h1>Search List</h1>
      <table>
      <% if @range == "Book" %>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><% image_tag book.user.get_profile_image(50,50) %></td>
            <td><% book.title %></td>
            <td><% book.body %></td>
          </tr>
          <% end %>
        </tbody>
      <% else %>
        <thead>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><% image_tag user.get_profile_image(50,50) %></td>
            <td><% user.name %></td>
          </tr>
          <% end %>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>
