<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
  <p><%= image_tag @user.get_image %></p>
  <div>
    <p>name</p>
    <p><%= @user.name %></p>
  </div>
  <div>
    <p>introduction</p>
    <p><%= @user.introduction %></p>
    <p><%= link_to '更新画面', edit_user_path(current_user.id) %></p>
  </div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_image %></td>
      <td><%= link_to book.title , book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>