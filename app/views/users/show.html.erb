<div>
  <%= flash[:notice] %>
</div>
<%= render 'users/error', book: @book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'books/info', user: @user %>
      <h1 class="mt-3">New book</h1>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--指定した日の記録の検索-->
      <div class="daily_posts_table">
        <%= render 'daily_posts', user: @user, create_at_books: @create_at_books %>
      </div>
      <h1>Books</h1>
      <%= render 'books/index', books: @books %>
      <h3>投稿数の前日比・前週比</h3>
      <%= render 'users/postratio', today_books: @today_books, yesterday_books: @yesterday_books, the_day_before: @the_day_before, this_week_books: @this_week_books, last_week_books: @last_week_books, the_week_before: @the_week_before %>
      <h3>７日間分の投稿数</h3>
      <%= render 'postgroph', books: @books, graph_data: @graph_data %>
    </div>
  </div>
</div>