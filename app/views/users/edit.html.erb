
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, id: "inputName" %><br>
      </div>
      <div class="form-group">
        <label>Image</label><br>
        <%= f.file_field :image, accept: "image/*" %><br>
      </div>
      <div class="form-group">
        <label>Introduction</label><br>
        <%= f.text_area :introduction %><br>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User'%><br>
        <% end %>
      </div>
    </div>
  </div>
</div>