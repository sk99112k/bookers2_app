<h1>User info</h1>
<%= form_with model: @user do |f| %>
<label>Name</label><br>
<%= f.text_field :name, autofocus: true, id: "inputName" %><br>
<label>Image</label><br>
<%= f.file_field :image, accept: "image/*" %><br>
<label>Introduction</label><br>
<%= f.text_area :introduction %><br>
<%= f.submit 'Update User'%><br>
<% end %>