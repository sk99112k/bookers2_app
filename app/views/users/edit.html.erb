
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
     <%= render 'users/error', book: @user %>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, id: "inputName" %><br>
      </div>
      <div class="form-group">
        <label>Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
      </div>
      <div class="form-group">
        <label>Introduction</label><br>
        <%= f.text_area :introduction %><br>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User'%><br>
      </div>
      <% end %>
    </div>
  </div>
</div>