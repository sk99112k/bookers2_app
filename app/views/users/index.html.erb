<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <p><%= image_tag current_user.get_image %></p>


  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <p class="btn btn-outline-secondary btn-block" ><%= link_to '更新画面', edit_user_path(current_user.id) %>
    <i class="fas fa-user-cog"></i></p>
  </div>

    <h1 class="mt-3">New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinion</h4>
  <%= f.text_area :body %>
    <div class="form-group">
      <input class="btn btn-success"><%= f.submit 'Create Book' %></input>
    </div>
    </div>
  </div>
</div>
<% end %>
<div class="col-md-8 offset-md-1">
  <h1>Users</h1>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_image %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      <% end %>
      </tr>
    </tbody>
  </table>