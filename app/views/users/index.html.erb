<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'books/info', user: current_user %>
      <h1 class="mt-3">New book</h1>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table">
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>

          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td><%= render 'relationships/btn', user: user %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          <% end %>
          </tr>
      </table>
    </div>
  </div>
</div>