<h1>User info</h1>
<p><%= image_tag current_user.get_image %></p>
  <div>
    <p>name</p>
    <p><%= current_user.name %></p>
  </div>
  <div>
    <p>introduction</p>
    <p><%= current_user.introduction %></p>
    <p><%= link_to '更新画面', edit_user_path(current_user.id) %></p>
  </div>

  <h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= image_tag user.get_image %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>